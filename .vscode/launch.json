{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}/Services/api",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Services/api",
                "APP_ENV": "development",
                "DEBUG": "1"
            },
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": false,
            "stopOnEntry": false,
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Python: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app.py",
                "--server.port",
                "8501",
                "--server.address",
                "0.0.0.0",
                "--browser.serverAddress",
                "localhost",
                "--server.headless",
                "true",
                "--logger.level",
                "debug"
            ],
            "cwd": "${workspaceFolder}/webapp",
            "env": {
                "STREAMLIT_ENV": "development",
                "DEBUG": "1"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Python: FastAPI Production",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--workers",
                "4",
                "--log-level",
                "info"
            ],
            "cwd": "${workspaceFolder}/Services/api",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Services/api",
                "APP_ENV": "production"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "FastAPI + Streamlit (Development)",
            "configurations": ["Python: FastAPI", "Python: Streamlit"],
            "stopAll": true
        }
    ]
}